<style>
  .faq-qu-ans .ans{
    display:none;
  }
  .faq-qu-ans.active .ans {
    display:block
}
</style>
<div class="dcontactBottomWrap">
<div class="dcontactBottomWrapLeft">
      <div class="contact-contet">
   <div class="conatct-heading">
    <h2>{{ section.settings.title}}</h2> 
   </div>
    <div class="contact-dec">
    {{ section.settings.dec}}
   </div>
    </div>
  <div class="contact-snippet">
    {% render 'contact-form-snippet' %}
  </div>
</div>
<div class="dcontactBottomWrapRight">
  <div class="faq-content-wrapp">
    <div class="faq-contet">
   <div class="faq-heading">
    <h2>{{ section.settings.faq-title}}</h2> 
   </div>
    <div class="faq-dec">
    {{ section.settings.faq-dec}}
   </div>
    </div>
  <div class="faq-blocks">
     {% for block in section.blocks %}
       <div class="faq-qu-ans"  style="background:{{ section.settings.bg_color }};">
        <h4 onclick="openFaq(this)">{{ block.settings.title }}</h4>
         <div class="ans">
           {{ block.settings.ans }}
          </div>
       </div>
       {% endfor %}
   </div>
  </div>
</div>
</div>

<script> 
  
var faq = document.querySelectorAll('.faq-qu-ans');

function openFaq(ac) {
  var pr = ac.closest(".faq-qu-ans");
  var classlist = pr.classList;

  if (!classlist.contains('active')) {
  
    faq.forEach((item) => {
      item.classList.remove('active');
    });

    // Open the clicked FAQ item
    classlist.add('active');
  }
}

</script>


