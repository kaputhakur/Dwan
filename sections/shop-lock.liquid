{% style %}
  .section-{{section.id}}-padding{
    padding-top:{{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom:{{ section.settings.padding_bottom | times:0.75 | round: 0 }}px;
  }
   @media screen and(min-width:750px){
     padding-top:{{ section.settings.padding_top}}px;
     padding-bottom:{{ section.settings.padding_bottom}}px;
   }
{% endstyle %}
<div class="section-{{ section.id }}-padding">
  <div class="{% if section.settings.width == 'full-width' %}full-width {% elsif section.settings.width == 'wrapper-width' %}page-width{% else %}narrow-width {% endif %}">
    <div class="shop-lock-wrapper">
      <div class="shop-lock-container">
        {% for block in section.blocks %}
          <div class="shop-lock-slides">
            <div class="shop-lock-image">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image |img_url:'615x768' }}">
              {% endif %}
            </div>
            <div class="shop-lock-products">
              {% if block.settings['productlist-1'] != blank
                or block.settings['productlist-2'] != blank
                or block.settings['productlist-3'] != blank
                or block.settings['productlist-4'] != blank
              %}
              {% endif %}
              <div class="shop-product">
                {% assign product = all_products[block.settings['productlist-1']] %}
                {% render 'card-product' %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Shop Lock",
  "settings": [

    {
    "type":"color",
    "label":"Background Color",
    "id":"bg-color"
  },
  {
    "type":"select",
    "label":"Page Width",
    "id":"width",
     "options":[
       {
         "value":"full-width",
         "label":"Full Width"
       },
       {
         "value":"page-width",
         "label":"Page Width"
       }
     ]
  },
  {
    "type":"range",
    "label":"Padding Top",
    "id":"padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "default":36
  },
     {
    "type":"range",
    "label":"Padding Top",
    "id":"padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "default":36
  }
  ],
  "blocks":[
    {
      "type":"Block-1",
      "name":"Block-1",
      "settings":[
        {
          "type":"image_picker",
          "label":"Image",
          "id":"image"
        },
         {
          "type":"product",
          "label":"Product",
          "id":"productlist-1"
        },
         {
          "type":"product",
          "label":"Product",
          "id":"productlist-2"
        },
         {
          "type":"product",
          "label":"Product",
          "id":"productlist-3"
        },
         {
          "type":"product",
          "label":"Product",
          "id":"productlist-4"
        }

      ]

    }
  ],
  "presets":[
    {
      "name":"Shop Lock"
    }
  ]
}
{% endschema %}

