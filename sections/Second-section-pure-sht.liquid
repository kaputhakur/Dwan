{% style %}
  .section-{{section.id}}-padding{
    padding-top:{{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom:{{ section.settings.padding_bottom | times:0.75 | round: 0 }}px;
  }
   @media screen and(min-width:750px){
     padding-top:{{ section.settings.padding_top}}px;
     padding-bottom:{{ section.settings.padding_bottom}}px;
   }
{% endstyle %}
 <div class="section-{{ section.id }}-padding">
   <div class="{% if section.settings.width == 'full-width' %}full-width{% else %}page-width{% endif %}">
     <div class="main-rich-text-wrapper">
     <div class="left-side-content">
       <div class="mainRichtextStar"
        {% if section.settings.star-svg != blank %}
          <div class="left-star-svg">
          {{ section.settings.star-svg }}
          </div>
        {% endif %}
        {% if section.settings.oval-svg != blank %}
          <div class="left-oval-svg">
          {{ section.settings.oval-svg }}
          </div>
        {% endif %}
       </div>
       
       {% if section.settings.title != blank %}
          <h3>{{ section.settings.title }}</h3>
        {% endif %}
        {% if section.settings.richtext != blank %}
          {{ section.settings.richtext }}
        {% endif %}
       </div>
       <div class="middel-content">
          {% if section.settings.gif_image != blank %}
              <img class gif-image src="{{ section.settings.gif_image | img_url:'' }}">
        {% endif %}
       </div>
        <div class="right-side-content">
           {% if section.settings.right-richtext != blank %}
          {{ section.settings.right-richtext }}
        {% endif %}
          {% if section.settings.right-svg != blank %}
          <div class="right-text-svg">
         {{ section.settings.right-svg}}
          </div>
        {% endif %}
        </div>
     </div>
   </div>
 </div>


{% schema %}
  {
    "name": "Second Section Pure Shot",
    "class":"section-pure-shot",
    "settings": [
        {
      "type":"select",
      "label":"Page Width",
      "id":"width",
       "options":[
         {
           "value":"full-width",
           "label":"Full Width"
         },
         {
           "value":"page-width",
           "label":"page-Width"
         }
       ]
    },
      {
      "type":"header",
      "content":"Section Padding"
    },
       {
      "type":"range",
      "label":"Padding Top",
      "id":"padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default":36
    },
       {
      "type":"range",
      "label":"Padding Top",
      "id":"padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default":36
    },
      {
      "type":"header",
      "content":"Left Content"
    },
         {
      "type": "textarea",
      "id": "star-svg",
      "label": "Star Svg code"
    },
          {
      "type": "textarea",
      "id": "oval-svg",
      "label": "Oval Svg code"
    },
       {
          "type":"text",
          "label":"Heading",
          "id":"title",
           "default":"Title"
       },
         {
          "type":"text",
          "label":"Sub Heading",
          "id":"sub_title",
           "default":"Sub-Title"
           
       },
      {
          "type":"textarea",
          "label":"richtext",
          "id":"richtext",
          "default":"<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled</p>"
       },
       {
      "type":"header",
      "content":"Middel Content"
     },
        {
        "type": "image_picker",
        "id": "gif_image",
        "label": "GIF Image"
       },
       {
      "type":"header",
      "content":"Right Content"
     },
       
      {
          "type":"textarea",
          "label":"Right Richtext",
          "id":"right-richtext"
       },
     {
      "type": "textarea",
      "id": "right-svg",
      "label": "RIght Text Svg code"
    }
      
      
    ],
    "presets":[
      {
        "name":"Second Section Pure Shot"
      }
    ]
  }
  
{% endschema %}

